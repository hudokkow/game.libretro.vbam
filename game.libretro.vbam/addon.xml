<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vbam"
		name="GBA (vbam)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.vbam.so"
                   library_linux="game.libretro.vbam.so"
                   library_osx="game.libretro.vbam.dylib"
                   library_windx="game.libretro.vbam.dll"
                   library_wingl="game.libretro.vbam.dll">
		<platforms>GBA</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">vbam v1.0.1</summary>
		<description>Source: https://github.com/libretro/vbam-libretro</description>
		<platform>all</platform>
	</extension>
</addon>
