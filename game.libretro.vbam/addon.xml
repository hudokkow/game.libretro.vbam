<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vbam"
		name="GBA (VBA-M)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.vbam.so"
                   library_linux="game.libretro.vbam.so"
                   library_osx="game.libretro.vbam.dylib"
                   library_windx="game.libretro.vbam.dll"
                   library_wingl="game.libretro.vbam.dll">
		<platforms>GBA</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">VisualBoyAdvance-M v1.0.1</summary>
		<description>VBA-M is a Nintendo Game Boy & Game Boy Advance emulator based on the official VisualBoyAdvance by Forgotten & the VBA development team.

Supported files: .gba

License: GPLv2</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
